<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddYourStaff">


    <RelativeLayout

        android:id="@+id/addStaff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Staff +"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/staff_img"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@drawable/service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addStaff" />


    <EditText
        android:id="@+id/edtStaffName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/bg_rectangle_edt"
        android:drawableStart="@drawable/ic_personcon"
        android:drawablePadding="10dp"
        android:paddingHorizontal="20dp"
        android:text="Enter Name Of Staff"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staff_img" />

    <EditText
        android:id="@+id/edtStaffNumber"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="24dp"

        android:background="@drawable/bg_rectangle_edt"
        android:drawableStart="@drawable/ic_personcon"
        android:drawablePadding="10dp"
        android:paddingHorizontal="20dp"
        android:text="Enter Name Of Number"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtStaffName"
        app:layout_constraintVertical_bias="0.117" />

    <Button

        android:id="@+id/btnConfirmStaff"
        android:layout_width="match_parent"
        android:layout_height="52dp"

        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bg_button"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtStaffNumber"
        app:layout_constraintVertical_bias="0.252" />

</androidx.constraintlayout.widget.ConstraintLayout>