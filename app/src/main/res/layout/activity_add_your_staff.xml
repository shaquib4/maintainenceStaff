<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddYourStaff">


    <RelativeLayout

        android:id="@+id/addStaff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Staff +"
            android:textColor="#fff"
            android:textSize="20sp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/staff_img"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_below="@+id/addStaff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/service" />

    <EditText
        android:id="@+id/edtStaffNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/staff_img"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_rectangle_edt"
        android:drawableStart="@drawable/ic_personcon"
        android:drawablePadding="10dp"
        android:hint="Enter Your Staff Mobile Number"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingHorizontal="20dp"
        android:textColor="#de4500"

        android:textColorHint="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/Access_staff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/edtStaffNumber"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rectangle_edt"
        android:drawableStart="@drawable/ic_personcon"
        android:drawablePadding="10dp"

        android:paddingHorizontal="20dp"
        android:paddingLeft="32dp"
        android:text="Enter Name Of Staff"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnConfirmStaff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Access_staff"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

</RelativeLayout>